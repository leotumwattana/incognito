          <div class="small-4 columns no-pad profile-loc">
            <div>
              <img src="images/profilepic.svg", alt="profile image" class="summary-profile">
              {{!-- <p>+4</p> --}}
            </div>
            <div>
              <img src="images/profilepic.svg", alt="profile image" class="summary-profile s2">
            </div>
          </div>
        </div>
