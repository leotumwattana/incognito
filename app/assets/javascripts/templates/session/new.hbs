<div class="login-page">
  <h1>Textical</h1>
  <div class="login-form row">
    <form id="login-form" action="login" method="post">
      <div class="row">
        <div class="small-8 small-centered columns">
          <label class="hidden" for="email">Email:</label>
          <input type="text" id="email" name="user[email]" placeholder="email" />
          <label class="hidden" for="Email">Email:</label>
          <input type="text" id="user_email" name="user[email]" placeholder="email" />
          <label class="hidden" for="password">Password:</label>
          <input type="password" id="password" name="user[password]" placeholder="password" />
        </div>
      </div>
      <div class="row">
        <div class="small-2"></div>
        <div class="small-4 small-offset-2 columns">
          <a href="#">Sign-up</a>
        </div>
        <div class="small-4 columns end">
          <input id="sign-in" class="right" type="submit" value="Sign-in" />
        </div>
      </div>
    </form>
  </div>

  <footer>
    <a href="#">Terms &amp; Conditions</a>
  </footer>
</div>

<script>
  $(document).ready( function() {

    var log_user_in = function() {
      window.location.href = 'http://localhost:3000/#/events';
    }

    if ($.cookie('user_id')) {
      log_user_in();
    }

    $('#sign-in').on('click', function (e) {
      e.preventDefault();

      $.ajax({
        type: 'POST',
        url: 'http://localhost:3000/login',
        dataType: 'json',
        data: $('form').serialize(),
        success: function(user) {
          $.cookie('user_id', user.id);
          $.cookie('username', user.username);
          log_user_in();
        },
        error: function(x,y,z) {
          alert('Error login');
        }
      });
    });
  });
</script>
